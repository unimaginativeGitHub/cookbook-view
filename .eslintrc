{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "mocha": true,
    "jquery": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "arrowFunctions": true,
      "binaryLiterals": true,
      "blockBindings": true,
      "classes": true,
      "defaultParams": true,
      "destructuring": true,
      "forOf": true,
      "generators": true,
      "modules": true,
      "objectLiteralComputedProperties": true,
      "objectLiteralDuplicateProperties": true,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
      "octalLiterals": true,
      "regexUFlag": true,
      "regexYFlag": true,
      "spread": true,
      "superInFunctions": true,
      "templateStrings": true,
      "unicodeCodePointEscapes": true,
      "globalReturn": true,
      "jsx": true
    }
  },
  "globals": {
    "Messenger": true
  },
  "rules":{
    "no-alert": 1, // disallow the use of alert, confirm, and prompt
    "no-array-constructor": 1, // disallow use of the Array constructor
    "no-bitwise": 0, // disallow use of bitwise operators (off by default)
    "no-caller": 1, // disallow use of arguments.caller or arguments.callee
    "no-catch-shadow": 1, // disallow the catch clause parameter name being the same as a variable in the outer scope (off by default in the node environment)
    "no-cond-assign": 1, // disallow assignment operators in conditional statements
    "no-console": 1, // disallow the use of console
    "no-constant-condition": 1, // disallow constant expressions in conditions
    "no-continue": 0, // disallow continue statements
    "no-control-regex": 1, // disallow control characters in regular expressions
    "no-debugger": 1, // disallow the use of debugger
    "no-delete-var": 1, // disallow deleting variables
    "no-div-regex": 0, // Disallow Regexs That Look Like Division
    "no-dupe-keys": 1, // disallow duplicate keys in object literals
    "no-dupe-args": 1, // disallow duplicate arguments in function definitions
    "no-duplicate-case": 1, // Rule to disallow a duplicate case label
    "no-else-return": 0, // Disallow return before else
    "no-empty": 1, // disallow empty block statements
    "no-empty-character-class": 1, // disallow empty character classes in regular expressions
    "no-eq-null": 1, // Disallow Null Comparisons
    "no-eval": 1, // Disallow eval()
    "no-ex-assign": 1, // disallow reassigning exceptions in catch clauses
    "no-extend-native": 1, // Disallow Extending of Native Objects
    "no-extra-bind": 1, // Disallow unnecessary function binding
    "no-extra-boolean-cast": 1, // disallow unnecessary boolean casts
    "no-extra-parens": [1, "functions"], // disallow unnecessary parentheses
    "no-extra-semi": 1, // disallow unnecessary semicolons
    "no-fallthrough": 1, // Disallow Case Statement Fallthrough
    "no-floating-decimal": 0, // Disallow Floating Decimals
    "no-func-assign": 1, // disallow reassigning function declarations
    "no-implied-eval": 1,
    "no-inline-comments": 0,
    "no-inner-declarations": [1, "functions"],
    "no-invalid-regexp": 1,
    "no-irregular-whitespace": 1,
    "no-iterator": 1,
    "no-label-var": 1,
    "no-labels": 1,
    "no-lone-blocks": 1,
    "no-lonely-if": 0,
    "no-loop-func": 1,
    "no-mixed-requires": [0, false],
    "no-mixed-spaces-and-tabs": [1, false],
    "no-multi-spaces": 1,
    "no-multi-str": 1,
    "no-multiple-empty-lines": [0, {"max": 2}],
    "no-native-reassign": 1,
    "no-negated-in-lhs": 1,
    "no-nested-ternary": 0,
    "no-new": 1,
    "no-new-func": 1,
    "no-new-object": 1,
    "no-new-require": 0,
    "no-new-wrappers": 1,
    "no-obj-calls": 1,
    "no-octal": 1,
    "no-octal-escape": 1,
    "no-param-reassign": 0,
    "no-path-concat": 0,
    "no-plusplus": 0,
    "no-process-env": 0,
    "no-process-exit": 1,
    "no-proto": 1,
    "no-redeclare": 1,
    "no-regex-spaces": 1,
    "no-reserved-keys": 0,
    "no-restricted-modules": 0,
    "no-return-assign": 1,
    "no-script-url": 1,
    "no-self-compare": 0,
    "no-sequences": 1,
    "no-shadow": 1,
    "no-shadow-restricted-names": 1,
    "no-space-before-semi": 0,
    "no-spaced-func": 1,
    "no-sparse-arrays": 1,
    "no-sync": 0,
    "no-ternary": 0,
    "no-trailing-spaces": 1,
    "no-throw-literal": 0,
    "no-undef": 1,
    "no-undef-init": 1,
    "no-undefined": 0,
    "no-underscore-dangle": 0,
    "no-unreachable": 1,
    "no-unused-expressions": 1,
    "no-unused-vars": [1, {"vars": "all", "args": "after-used"}],
    "no-use-before-define": 0,
    "no-void": 0,
    "no-var": 0,
    "no-warning-comments": [0, { "terms": ["todo", "fixme", "xxx"], "location": "start" }],
    "no-with": 1,
    "block-scoped-var": 0,
    "brace-style": [0, "1tbs"],
    "camelcase": 0,
    "comma-dangle": [1, "never"], // disallow or enforce trailing commas
    "comma-spacing": 1,
    "comma-style": 0,
    "complexity": [0, 11],
    "consistent-return": 0,
    "consistent-this": [0, "that"],
    "curly": [1, "all"],
    "default-case": 0,
    "dot-notation": [1, { "allowKeywords": true }],
    "eol-last": 1,
    "eqeqeq": 1,
    "func-names": 0,
    "func-style": [0, "declaration"],
    "generator-star": 0,
    "generator-star-spacing": 0,
    "guard-for-in": 0,
    "handle-callback-err": 0,
    "indent": [1, 2, {"SwitchCase": 1}],
    "key-spacing": [1, { "beforeColon": false, "afterColon": true }],
    "max-depth": [0, 4],
    "max-len": [1, 80, 4],
    "max-nested-callbacks": [0, 2],
    "max-params": [0, 3],
    "max-statements": [0, 10],
    "new-cap": [1, {
      "capIsNewExceptions": [
        "Immutable.List",
        "Immutable.Map",
        "Immutable.Record",
        "Immutable.Set",
        "Intl.DateTimeFormat",
        "Messenger",
        "$.Deferred"
      ]
    }],
    "new-parens": 1,
    "newline-after-var": 0,
    "one-var": 0,
    "object-curly-spacing": [1, "always"],
    "array-bracket-spacing": [1, "never"],
    "computed-property-spacing": [1, "never"],
    "operator-assignment": [0, "always"],
    "operator-linebreak": 0,
    "padded-blocks": 0,
    "quote-props": 0,
    "quotes": [1, "single"],
    "radix": 0,
    "semi": 1,
    "semi-spacing": [1, {"before": false, "after": true}],
    "sort-vars": 0,
    "space-before-blocks": [1, "always"],
    "space-before-function-paren": [1, "never"],
    "space-in-parens": [1, "never"],
    "space-infix-ops": 1,
    "keyword-spacing": 1,
    "space-unary-ops": [1, { "words": true, "nonwords": false }],
    "spaced-line-comment": [0, "always"],
    "strict": [1, "global"],
    "use-isnan": 1,
    "valid-jsdoc": 0,
    "valid-typeof": 1,
    "vars-on-top": 0,
    "wrap-iife": 0,
    "wrap-regex": 0,
    "yoda": [1, "never"],


    //
    // eslint-plugin-react
    //
    // React specific linting rules for ESLint
    //
    "react/display-name": 0,
    "react/jsx-boolean-value": 0, // Enforce boolean attributes notation in JSX
    "react/jsx-curly-spacing": [1, "always"], // Enforce or disallow spaces inside of curly braces in JSX attributes.
    "react/jsx-max-props-per-line": 1, // Limit maximum of props on a single line in JSX
    "react/jsx-no-duplicate-props": 1, // Prevent duplicate properties in JSX
    "react/jsx-no-undef": 1, // Disallow undeclared variables in JSX
    "jsx-quotes": [1, "prefer-single"], // enforce the consistent use of either double or single quotes in JSX attributes
    "react/jsx-sort-prop-types": 0,
    "react/jsx-sort-props": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-danger": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-multi-comp": 0,
    "react/no-unknown-property": 1,
    "react/prop-types": 1,
    "react/react-in-jsx-scope": 1,
    //"react/require-extension": 1,
    "react/self-closing-comp": 1,
    "react/sort-comp": 0,
    "react/jsx-wrap-multilines": 1
  }
}

